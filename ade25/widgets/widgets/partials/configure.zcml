<configure
        xmlns="http://namespaces.zope.org/zope"
        xmlns:browser="http://namespaces.zope.org/browser"
        xmlns:z3c="http://namespaces.zope.org/z3c"
        i18n_domain="ade25.widgets">

    <!-- Content preview widgets -->
    <browser:page
            for="*"
            name="content-widget-content-card"
            class="ade25.widgets.widgets.base.WidgetContentCard"
            template="base-card.pt"
            permission="zope2.View"
            layer="ade25.widgets.interfaces.IHphWidgetsLayer"
    />

    <browser:page
            for="*"
            name="content-widget-content-snippet"
            class="ade25.widgets.widgets.base.WidgetContentSnippet"
            template="base-snippet.pt"
            permission="zope2.View"
            layer="ade25.widgets.interfaces.IHphWidgetsLayer"
    />


    <!-- Content widget News Preview -->
    <browser:page
            for="*"
            name="content-widget-news-card"
            class="ade25.widgets.widgets.news.WidgetNewsCard"
            template="news-card.pt"
            permission="zope2.View"
            layer="ade25.widgets.interfaces.IHphWidgetsLayer"
    />

    <browser:page
            for="*"
            name="content-widget-event-tile"
            class="ade25.widgets.widgets.event.WidgetEventTile"
            template="event-tile.pt"
            permission="zope2.View"
            layer="ade25.widgets.interfaces.IHphWidgetsLayer"
    />

    <browser:page
            for="*"
            name="content-widget-event-snippet"
            class="ade25.widgets.widgets.event.WidgetEventSnippet"
            template="event-snippet.pt"
            permission="zope2.View"
            layer="ade25.widgets.interfaces.IHphWidgetsLayer"
    />

    <browser:page
            for="*"
            name="content-widget-event-card"
            class="ade25.widgets.widgets.event.WidgetEventCard"
            template="event-card.pt"
            permission="zope2.View"
            layer="ade25.widgets.interfaces.IHphWidgetsLayer"
    />

</configure>